<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

        <% if (username) {%>
        <a style="color: black" class="nav-item nav-link"
          >Welcome <%=users[username].email%></a
        >
        <form method="POST" action="/logout">
          <input type="submit" class="btn-danger" value="logout" />
        </form>
        <%} else {%>

        <form method="GET" action="/register">
          <input
            style="margin-top: 0.3rem"
            type="submit"
            class="btn-secondary"
            value="Register"
          />
        </form>
        <p
          style="
            margin-top: 0.3rem;
            margin-left: 0.3rem;
            padding: 2px;
            color: white;
          "
        >
          Already a user?, please click here to login
        </p>
        <form method="GET" action="/login">
          <input
            style="margin-top: 0.3rem"
            type="submit"
            class="btn-primary"
            value="login"
          />
        </form>
        <% }%>
      </div>
    </div>
  </nav>
</header>
